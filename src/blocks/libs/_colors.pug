- let colorItems = [{name: "Dark Shade 100%", color: "#1F2041"}, {name: "Dark Shade 75%", color: "#1F2041"}, {name: "Dark Shade 50%", color: "#1F2041"}, {name: "Dark Shade 25%", color: "#1F2041"}, {name: "Dark Shade 5%", color: "#1F2041"}, {name: "Purple", color: "#BC9CFF"}, {name: "Green", color: "#6FCF97"}]

mixin colors
    ul.colors
        each item in colorItems
            li.colors__item
                h2.colors__title #{item.name}
                p.colors__subtitle #{item.color}