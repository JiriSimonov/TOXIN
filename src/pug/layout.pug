include ../blocks/blocks
include ../blocks/libs/_libs
block vars
    -let lang = 'ru-RU';
    -let siteTitle = 'Title';

doctype html
html(lang=lang)
    block head
        head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="IE=edge")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            block links
                link(rel="stylesheet", href="../../styles/index.scss")
            title #{siteTitle}
    if (siteTitle === 'Colors&type' || siteTitle === 'Form elements')
        body.body.body_white
            block content
            block scripts
                script(src="https://kit.fontawesome.com/230c12916f.js")
    else
        body.body
            block content
            block scripts
                script(src="https://kit.fontawesome.com/230c12916f.js")